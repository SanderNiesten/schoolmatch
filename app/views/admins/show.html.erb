<div class="container">
  <h5> <%= @user.admin ? "Status: Admin" : "Status: Admin" %> </h5>

  <br>

  <h4>Hello <%= @user.name %>, </h4>

  <br>

  <h4> Manage users  </h4>

</div>


<div class="container">


    <table class="table table-hover">
      <thead class="thead-default">
        <tr>
          <th>Name user</th>
          <th>User role</th>
          <th>Promote / Demote User</th>
        </tr>
      </thead>
    <% @users.each do |user| %>
      <tbody>
        <tr>
          <td> <%= user.name %></td>
          <td> <%= user.admin ? "Admin" : "Student" %></td>
          <td> <%= button_to user.admin ? "Demote" : "Promote" , "#{user.id}", {:method => 'put',  :action => 'make_admin', class: "btn btn-info"}%> </td>
        </tr>
    <% end %>
      </tbody>
    </table>


<h4> See matches of the day: </h4>

    <table class="table table-hover">
      <thead class="thead-default">
        <tr>
          <th>Day</th>
          <th>Student</th>
          <th>Student</th>
        </tr>
      </thead>
    <% @match.length.times do |index| %>
    <% index = index + 1 %>
      <tbody>
        <tr>
          <td> <%= index.to_s %></td>
          <td> <%= @match.shuffle.second %> </td>
          <td> <%= @match.shuffle.first %> </td>
        </tr>
    <% end %>
      </tbody>
    </table>

</div>
